{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Nova tag: </h3>
<div class="card">
    <div class="card-body">
        <form action="/tags" method="POST">
            <label for="nome">Nome: </label>
            <br>
            <input type="text" id="nome" name="nome" placeholder="Nome da tag" class="form-control">
            <br>
            <label for="slug">Slug: </label>
            <br>
            <input type="text" id="slug" name="slug" placeholder="Slug da tag" class="form-control">
            <br>
            <button type="submit" class="btn btn-outline-success">Criar tag</button>
        </form>
    </div>
</div>