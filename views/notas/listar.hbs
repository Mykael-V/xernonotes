<h2>Lista de notas</h2>
<hr>
<a href="/notas/nova"><button type="button" class="btn btn-success">Criar nova nota</button></a>

{{#each notas}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <small>Data: {{data}}</small>
        <br>
        <small>Categoria: {{categoria.nome}}</small>
        <br>
        <small>Conteudo: {{this.conteudo}}</small>
        <br>
        <small>Tags : </small>
        {{#each tags}}
        <small>{{nome}};</small>
        {{else}}
        <small> Nenhuma tag encontrada </small>
        {{/each}}
        <br>
        <br>
        <a href="/notas/{{_id}}/editar"><button type="submit" class="btn btn-outline-success">Editar
                notas</button></a>
        <br>
        <br>
        <a href="/notas/{{_id}}/deletar"><button type="submit" class="btn btn-outline-danger">Deletar
                Nota</button></a>
    </div>
</div>
{{else}}
<p>Nenhuma postagem registrada.</p>
{{/each}}